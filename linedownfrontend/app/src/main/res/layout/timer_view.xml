<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent">

        <Chronometer
            android:id="@+id/timer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:countDown="false"
            android:textSize="60dp" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_below="@+id/timer_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Start"
            app:layout_constraintBottom_toTopOf="@+id/timer_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/stop_button"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/start_button"
            android:layout_below="@+id/start_button"
            android:layout_marginTop="24dp"
            android:text="Stop"
            app:layout_constraintBottom_toTopOf="@+id/timer_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/submit_button_timer"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/stop_button"
            android:layout_below="@+id/stop_button"
            android:layout_marginTop="23dp"
            android:text="Submit"
            app:layout_constraintBottom_toTopOf="@+id/timer_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/restart_button"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/submit_button_timer"
            android:layout_marginBottom="44dp"
            android:text="Restart"
            app:layout_constraintBottom_toTopOf="@+id/timer_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/mybutton"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>