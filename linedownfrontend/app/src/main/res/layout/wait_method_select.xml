<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="com.engi5895.linedown.linedown.WaitMethodSelect">

        <Button
            android:id="@+id/manual_select"
            android:layout_width="165dp"
            android:layout_height="97dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="109dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="124dp"
            android:text="Manual"
            app:layout_constraintBottom_toTopOf="@+id/timer_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/timer_select"
            android:layout_width="165dp"
            android:layout_height="97dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="109dp"
            android:layout_marginStart="110dp"
            android:text="Timer"
            app:layout_constraintEnd_toEndOf="@+id/manual_select"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="261dp"
            android:background="@drawable/mybutton"
            android:textSize="24sp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>