<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="5dip" android:color="@color/bright_foreground_holo_dark" />
                <gradient android:angle="-90" android:startColor="@color/bright_foreground_holo_dark" android:endColor="#c4a136"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#c4a136" />
                <solid android:color="@color/bright_foreground_holo_dark"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="5dip" android:color="#dab346" />
                <gradient android:angle="-90" android:startColor="@color/bright_foreground_holo_dark" android:endColor="#c4a136" />
            </shape>
        </item>
</selector>